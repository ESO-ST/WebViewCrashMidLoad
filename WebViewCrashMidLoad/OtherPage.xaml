<?xml version="1.0" encoding="utf-8" ?>
<mopups:PopupPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
               xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
                xmlns:mopups="clr-namespace:Mopups.Pages;assembly=Mopups"
               x:Class="WebViewCrashMidLoad.OtherPage">
  <VerticalStackLayout>
    <Label Text="This is the other page!"
           VerticalOptions="Center"
           HorizontalOptions="Center" />

    <Button x:Name="CounterBtn"
            Text="Click me"
            SemanticProperties.Hint="Counts the number of times you click"
            Clicked="OnCounterClicked"
            HorizontalOptions="Fill" />

    <Button x:Name="CallActionSheet"
            Text="Call Action Sheet"
            SemanticProperties.Hint="Calls a dummy action sheet to show it doesn't show up above this page"
            Clicked="OnCallActionSheetClicked"
            HorizontalOptions="Fill" />

    <WebView x:Name="CrashingWebView"
             Source="https://yahoo.com"
             WidthRequest="800"
             HeightRequest="1000"
             HorizontalOptions="Fill"
             VerticalOptions="Fill" />
  </VerticalStackLayout>
</mopups:PopupPage>