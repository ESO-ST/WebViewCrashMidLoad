<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:WebViewCrashMidLoad"
             x:Class="WebViewCrashMidLoad.ShellPage">

  <ScrollView>
    <VerticalStackLayout Padding="30,0"
                         Spacing="25">
      <local:MyImage Source="dotnet_bot.png"
             HeightRequest="185"
             Aspect="AspectFit"
             SemanticProperties.Description="dot net bot in a race car number eight" />

      <local:MyButton Text="Go To Non-Shell Page"
              Clicked="Button_Clicked"/>

      <local:MyButton Text="GC Collect"
              Clicked="Button_Clicked_1" />

      <local:MyButton Text="Show memory used"
              Clicked="Button_Clicked_2" 
                      x:Name="memoryUsedBtn"/>
    </VerticalStackLayout>
  </ScrollView>

</ContentPage>
